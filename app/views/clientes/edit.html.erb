<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Perfil</h3>
        <br />
      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Atualizar dados</h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">

          <%= form_for @cliente, url: perfil_editar_path, html: {class: "form-horizontal form-label-left"} do |f| %>
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>" style="margin-top: 0px;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                <%= message %>
              </div>
            <% end %>
            <div class="item form-group">
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <%= render 'shared/erros', object: f.object %>
              </div>
            </div>
            <div class="item form-group">
              <%= f.label :nome, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :nome, class: "form-control col-md-7 col-xs-12", placeholder: "O seu nome", value: @cliente.nome %>
              </div>
            </div>
            <div class="item form-group">
              <%= f.label :email, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.email_field :email, class: "form-control col-md-7 col-xs-12", placeholder: "O seu email", 
                                          value: @cliente.email %>
              </div>
            </div>
            <div class="item form-group">
              <%= f.label :password, "Senha", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.password_field :password, class: "form-control col-md-7 col-xs-12", "data-validate-length": "6,8", 
                                                required: false %>
              </div>
            </div>
            <div class="item form-group">
              <%= f.label :password_confirmation, "Confirmar senha", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.password_field :password_confirmation, class: "form-control col-md-7 col-xs-12",
                                                required: false %>
              </div>
            </div>
            <div class="item form-group">
              <%= f.label :moeda, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.select :moeda, ["BRL", "EUR"], {}, { class: "form-control col-md-7 col-xs-12" } %>
              </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col-md-6 col-md-offset-3">
                <%= button_tag "Limpar", type: :reset, class: "btn btn-default" %>
                <%= f.submit "Enviar", class: "btn btn-primary" %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->
