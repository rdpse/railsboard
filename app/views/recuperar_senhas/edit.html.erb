<% provide(:title, "RecuperaÃ§Ã£o de senha") %>
<div class="animate form login_form">
	<% flash.each do |message_type, message| %>
		<div class="alert alert-<%= message_type %>">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= message %>
    </div>
	<% end %>

	<section class="login_content">
    <%= form_for(@cliente, url: recuperar_senha_path(params[:id])) do |f| %>
		  <h1>Recuperar senha</h1>
      <%= render 'shared/erros', object: f.object %>

      <%= hidden_field_tag :email, @cliente.email %>

      <%= f.password_field :password, class: 'form-control', placeholder: 'Insira uma senha' %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirme a sua nova senha' %>

      <%= f.submit "Atualizar senha", class: "btn btn-default col-md-12" %>
		<% end %>
	</section>
</div>
