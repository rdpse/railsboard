<% provide(:title, "Servidores") %>
<!-- page content -->
<div class="right_col" role="main">
  <% comment do %>
	<!-- top tiles -->
	<div class="row tile_count">
		<div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
			<span class="count_top"><i class="fa fa-user"></i> Servidores</span>
			<div class="count">1</div>
		</div>
		<div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
			<span class="count_top"><i class="fa fa-tasks"></i> Intervenções agendadas</span>
			<div class="count">0</div>
		</div>
		<div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
			<span class="count_top"><i class="fa fa-gears"></i> Uptime total </span>
			<div class="count green">99.2%</div>
		</div>
	</div>
	<!-- /top tiles -->
  <% end %>
  <br />

  <div class="page-title">
    <div class="title_left" style="margin: 0 0 14px 4px;">
      <h3>Servidores</h3>
    </div>
  </div>

  <div class="clearfix"></div>

	<% flash.each do |message_type, message| %>
		<div class="alert alert-<%= message_type %>" style="margin-top: 0px;">
      <button type="button" class="close" data-dismiss="alert" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
      <%= message %>
    </div>
	<% end %>

	<%# TODO: when no servers, render page accordingly; otherwise it gets mangled %>
  <% if @hosts.present? %>
    <% @hosts.find_each do |h| %>
      <div class="servidor">
        <%= render partial: 'servidor', locals: { host: h } %>
      </div>
    <% end %>
  <% else %>
    <p class="text-muted well well-sm no-shadow">
      <i>Ainda não há servidores associados à sua conta.</i>
    </p>
  <% end %>
	</div>
</div>
<!-- /page content -->
