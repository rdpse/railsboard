<div id="alerts"></div>

<%= form_for @resposta, url: ticket_update_path, authenticity_token: true, remote: true do |f| %>
  <div class="col-lg-12 col-md-12 col-xs-12">
    <%= f.text_area :mensagem, id: "resposta-texto", class: "resposta-editor", 
                               autofocus: true %>
  </div>

  <div id="resposta-anexos" class="pull-left" style="margin: 1em 0 0 0.8em;">
    <%= f.file_field :anexos, multiple: true, id: "resposta-anexo", class: "form-control" %>
  </div>

  <div class="pull-right" style="margin-top: 1em;">
    <%= button_tag "Limpar", class: "btn btn-primary", type: :reset %>
    <%= f.submit "Enviar", id: "responder-ticket-botao", class: "btn btn-success" %>
  </div>
<% end %>
