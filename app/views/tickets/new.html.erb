<% provide(:title, "Novo Ticket") %>
<div class="right_col" role="main">
    <div class="page-title">
      <div class="title_left">
        <h3>Novo ticket</h3>
        <br />
      </div>
    </div>

    <div class="clearfix"></div> 

    <div class="row">
      <div class="col-xs-12">
        <div class="x_panel">
          <div class="x_content" style="margin-top: -0.5em;">
            <%= form_for @ticket do |f| %>
              <div id="erros-ticket">
                <% flash.each do |message_type, message| %>
                  <div class="alert alert-<%= message_type %>" style="margin-top: 0px;">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                    <%= message %>
                  </div>
                <% end %>
                <%= render 'shared/erros', object: f.object %>
                <br />
              </div>

              <%= f.text_field :assunto, placeholder: 'Introduza o assunto do ticket', autofocus: true, 
                                         class: 'form-control' %>
              <br />

              <%= f.fields_for :ticket_respostas do |r| %>
                <%= r.text_area :mensagem, placeholder: 'Introduza a sua mensagem', rows: 10, 
                                class: 'form-control' %>
                <br />

             <div class="row">
               <div class="col-sm-6 col-xs-12">
                 <%= r.file_field :anexos, multiple: true, placeholder: 'Anexos', class: 'form-control' %>
               </div>
             </div>
             <br />
              <% end %>
              
             <div class="row">
               <div class="col-xs-12">
                <%= button_tag "Limpar", class: 'btn btn-default', type: :reset %>
                <%= f.submit "Enviar", class: 'btn btn-primary' %>
               </div>
             </div>
              
            <% end %>
          </div>
        </div>
      </div>
    </div>

</div>
